<widget id="com.lawyer.app"
        version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0">
    
    <name>Lawyer</name>
    <description>A simple App for Professional Lwyers and Attoneys alikw.</description>
    <author email="dedonpot@gmail.com" href="http://www.apps.xavitechltd.com.ng/lawyer">Okafor Jerry Hanks</author>



    <preference name="phonegap-version" value="cli-5.2.0" />
